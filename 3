function ordinaArray(array, crescente = true) {
  if (crescente) {
    for (let i = 0; i < array.length - 1; i++) {
      for (let j = 0; j < array.length - 1 - i; j++) {
        if (array[j] > array[j + 1]) {
          // Scambia gli elementi se l'elemento corrente è maggiore di quello successivo
          const temp = array[j];
          array[j] = array[j + 1];
          array[j + 1] = temp;
        }
      }
    }
  } else {
    for (let i = 0; i < array.length - 1; i++) {
      for (let j = 0; j < array.length - 1 - i; j++) {
        if (array[j] < array[j + 1]) {
          // Scambia gli elementi se l'elemento corrente è minore di quello successivo
          const temp = array[j];
          array[j] = array[j + 1];
          array[j + 1] = temp;
        }
      }
    }
  }
  return array;
}

const arrayDaOrdinare = [5, 2, 9, 1, 5, 6];

const arrayCrescente = ordinaArray(arrayDaOrdinare, true);
const arrayDecrescente = ordinaArray(arrayDaOrdinare, false);

console.log("Array in ordine crescente:", arrayCrescente);
console.log("Array in ordine decrescente:", arrayDecrescente);
